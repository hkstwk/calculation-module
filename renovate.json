{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchManagers": ["maven"],
      "groupName": "All Maven Dependencies",
      "matchPackagePatterns": ["*"]
    }
  ],
  "schedule": ["monthly"]
}
